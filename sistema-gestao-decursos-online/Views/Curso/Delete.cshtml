@model sistema_gestao_decursos_online.Models.CursoModel

@{
    ViewData["Title"] = "Excluir Curso";
    Layout = "_Layout";
}
<!--
 * View: Curso/Delete
 * Descrição: Confirmação para exclusão de um curso.
 * Data de Criação: 02/06/2025
-->
<h1>Excluir Curso</h1>

<h3>Tem certeza que deseja excluir este curso?</h3>

<div>
    <h4>@ViewData["Title"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.CursoId</dd>

        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>

        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>

        <dt class="col-sm-2">Carga Horária</dt>
        <dd class="col-sm-10">@Model.CargaHoraria</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.CursoId" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
