@model sistema_gestao_decursos_online.Models.AvaliacaoModel

@{
    ViewData["Title"] = "Excluir Avaliação";
}
<!--
 * View: Avaliacao/Delete
 * Descrição: Confirmação para exclusão de uma avaliação.
 * Data de Criação: 02/05/2025
-->
<h1>Excluir Avaliação</h1>

<h3>Tem certeza que deseja excluir esta avaliação?</h3>

<div>
    <h4>Detalhes da Avaliação</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.AvaliacaoId</dd>

        <dt class="col-sm-2">Usuário</dt>
        <dd class="col-sm-10">@Model.Usuario?.Nome</dd>

        <dt class="col-sm-2">Curso</dt>
        <dd class="col-sm-10">@Model.Curso?.Titulo</dd>

        <dt class="col-sm-2">Nota</dt>
        <dd class="col-sm-10">@Model.Nota</dd>

        <dt class="col-sm-2">Comentário</dt>
        <dd class="col-sm-10">@Model.Comentario ?? "(Nenhum)"</dd>

        <dt class="col-sm-2">Data</dt>
        <dd class="col-sm-10">@Model.Data.ToString("dd/MM/yyyy")</dd>

    </dl>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.AvaliacaoId" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
