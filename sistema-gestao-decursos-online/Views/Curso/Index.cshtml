@model List<sistema_gestao_decursos_online.Models.CursoModel>

@{
    ViewData["Title"] = "Listagem de Cursos";
    Layout = "_Layout";
}
<!--
 * View: Curso/List
 * Descrição: Lista todos os cursos cadastrados.
 * Data de Criação: 02/06/2025
-->
<p>
    <a asp-action="Create" asp-controller="Curso" class="btn btn-primary">Cadastrar Novo Curso</a>
</p>

<div class="card">
    <div class="card-header bg-success text-white text-center">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="card-body">
        <table class="table table-striped" id="tabela-cursos">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Titulo)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Descricao)</th>
                    <th>@Html.DisplayNameFor(model => model.First().CargaHoraria)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var curso in Model)
                {
                    <tr>
                        <td>@curso.Titulo</td>
                        <td>@curso.Descricao</td>
                        <td>@curso.CargaHoraria horas</td>
                        <td>
                            <a asp-controller="Curso" asp-action="Edit" asp-route-id="@curso.CursoId" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-controller="Curso" asp-action="Details" asp-route-id="@curso.CursoId" class="btn btn-info btn-sm">Detalhes</a>
                            <a asp-controller="Curso" asp-action="Delete" asp-route-id="@curso.CursoId" class="btn btn-danger btn-sm">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
