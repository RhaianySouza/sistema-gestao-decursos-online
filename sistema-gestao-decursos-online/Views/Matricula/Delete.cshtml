@model sistema_gestao_decursos_online.Models.MatriculaModel

@{
    ViewData["Title"] = "Excluir Matrícula";
}
<!--
 * View: Matricula/Delete
 * Descrição: Confirmação para exclusão de uma matrícula.
 * Data de Criação: 02/06/2025
-->
<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que deseja excluir esta matrícula?</h3>

<div>
    <h4>Detalhes da Matrícula</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">ID da Matrícula</dt>
        <dd class="col-sm-9">@Model.MatriculaId</dd>

        <dt class="col-sm-3">Usuário</dt>
        <dd class="col-sm-9">@Model.Usuario?.Nome</dd>

        <dt class="col-sm-3">Curso</dt>
        <dd class="col-sm-9">@Model.Curso?.Titulo</dd>

        <dt class="col-sm-3">Data da Matrícula</dt>
        <dd class="col-sm-9">@Model.DataMatricula.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.MatriculaId" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
